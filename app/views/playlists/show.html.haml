= javascript_include_tag "rdioscripts.js"

%h1= @playlist.name
#playlistKey= @playlist.rdio_key

%p
  Access Code:
  %b= @playlist.access_code ? @playlist.access_code : "No access code"

%p
  Have your friends text the access code to
  %b 978-278-3217
  to begin adding songs
= button_to "New Access Code", generate_access_code_path, class: "btn btn-inverse"

#startPrompt
  %p Add a few songs to build up your playlist and then press start
  #start.btn.btn-success start

#rdioPlayer
  #songInfo
    %img#art
    %b Track:
    #track
    %b Artist:
    #artist
    %b Position:
    #positionContainer
      #position
        &nbsp;

  #playbackControls
    -# #previous.btn.btn-inverse previous
    #play.btn.btn-inverse play
    #pause.btn.btn-inverse pause
    -# #next.btn.btn-inverse next
